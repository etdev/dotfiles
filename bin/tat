#!/bin/sh
#
# Attach or create tmux session.
# If an argument is given, use it as the session name.
# Otherwise, use the current directory name.

if [ -n "$1" ]; then
  # Use the first argument as the session name
  session_name="$1"
else
  # Use the current directory name as the session name
  session_name="$(basename "$PWD")"
fi

# Sanitize the name (applies to both cases)
session_name="$(echo "$session_name" | tr . -)"

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux list-sessions | sed -E 's/:.*$//' | grep -q "^$session_name$"
}

create_detached_session() {
  (TMUX='' tmux new-session -Ad -s "$session_name")
}

create_if_needed_and_attach() {
  if not_in_tmux; then
    tmux new-session -As "$session_name"
  else
    if ! session_exists; then
      create_detached_session
    fi
    tmux switch-client -t "$session_name"
  fi
}

create_if_needed_and_attach
