# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias diff="colordiff";
alias j="jobs";
alias l="ls $LS_OPTIONS"
alias ls="ls $LS_OPTIONS"
alias ll="ls -al $LS_OPTIONS"
alias lh="ls -Alh $LS_OPTIONS"
alias tatt="tmux attach -t"
alias tls="tmux ls"
alias v="vim"
alias be= "bundle exec "
alias bers="bundle exec rails server"
alias bersb="bundle exec rails server -d"
alias bersk="kill -9 \$(cat tmp/pids/server.pid)"
alias berst="tail -f log/development.log"
alias berst-t="tail -f log/test.log"
alias berc="bundle exec rails console"
alias berspec="bundle exec rspec"

# git
alias gci="git pull --rebase && rake && git push"
alias gg="git grep";

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

# console
function rlc() {
  if [ -x bin/rails ]; then
    bin/rails console $@
  elif [ -x script/console ]; then
    script/console $@
  else
    bundle exec rails console $@
  fi
}

# server
function rls() {
  if [ -x bin/foreman ]; then
    bin/foreman start $@
  elif [ -a Procfile ]; then
    bundle exec foreman start $@
  elif [ -x bin/rails ]; then
    bin/rails server $@
  elif [ -x script/server ]; then
    script/server $@
  else
    bundle exec rails server $@
  fi
}

# generator
function rlg() {
  if [ -x bin/rails ]; then
    bin/rails generate $@
  elif [ -x script/generate ]; then
    script/generate $@
  else
    bundle exec rails generate $@
  fi
}

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"
